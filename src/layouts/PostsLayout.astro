---
import type { CollectionEntry } from 'astro:content'
import FormattedDate from '../components/FormattedDate.astro'
import MainLayout from './MainLayout.astro'

type Props = CollectionEntry<'blog'>['data']

const { title, date, updatedDate, heroImage } = Astro.props
---
<MainLayout>

	<article>
		<div class="w-full">
			{heroImage && <img width={1020} height={510} src={heroImage} alt="" class="block mx-auto rounded-lg shadow-[var(--box-shadow)]" />}
		</div>
		<div class="prose w-[720px] max-w-[calc(100%-2em)] mx-auto p-4">
			<div class="title mb-4 py-4 text-center leading-none">
				<div class="date mb-2">
					<FormattedDate date={date} />
					{
					updatedDate && (
					<div class="last-updated-on italic">
						Last updated on <FormattedDate date={updatedDate} />
					</div>
					)
					}
				</div>
				<h1 class="mb-2">{title}</h1>
				<hr />
			</div>
			<slot />
		</div>
	</article>
</MainLayout>
